doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
    body
        header
            nav
                ul
                    li
                        a(href='/') all-records
                    li 
                        a(href='add-record') Search books by author   
        main
            h1 All Books
            ul
            if recs.length > 0
                each record in recs
                    li #{record.title}
            else
                h2 No Products