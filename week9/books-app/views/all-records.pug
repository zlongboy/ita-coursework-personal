doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
    body
        header
            nav
                ul
                    li
                        a(href='/') all-records
                    li
                        a(href='add-book') add-book     
        main
            h1 All Books
            ul
            if recs
                each record in recs
                    li #{record.title}
            else
                h3 No Books Available